include "js.html"
<script type="text/javascript">
$(document).ready(function(){
	var $container = $('.aboutMaso');		
	$container.masonry({			
	  itemSelector: '.masoAbout'
	});			
	
	

	$(window).resize(function(){
		var thisW = $(this).width();
		if(thisW <= 600){		
			$('.aboutMaso > li').addClass('active');			
			$('.aboutMore').removeClass('aboutMore');
			$('.about02.active').hide();
			$('.about01.active').on('click',function(e){		
				e.preventDefault();
				var abH = $('.about01.active').height();				
				TweenMax.staggerTo($('.about01.active'), 1, 
					  {scale:0, opacity:0}, 0.25,function(){		
						$('.aboutMaso').css({top:-abH});
						$('.about02.active').fadeIn(500);
						
				});				
				
			});
		}else if(thisW >= 601){
					$('.aboutMaso > li').removeClass('active');				
					$('.about02').addClass('aboutMore');				
					$('.aboutMore').show();
					var abH = $('.about01').height();
					TweenMax.staggerTo($('.about01'), 0.3, 
					  {scale:1, opacity:1}, 0.25,function(){		
						$('.aboutMaso').css({top:'0'});
						
				});				
			
		}


		

	});
	

	$(window).scroll(function(){
		var scrollTop = $(document).scrollTop();	
		var kk = $('#orgaTop').offset().top;	
		var  timelineLite = $("#timelinelite"),
        tagline = $(".organizition li"),      
        tl = new TimelineLite();
      
			if(scrollTop >= kk){
				       
			 tl.from(timelinelite, 0.5, {width:"0px", alpha:0}, "-=0.02")
			 .staggerFrom(tagline, 0.5, {top:"-=30px", rotation:"-40deg", alpha:0, scale:3.8, ease:Back.easeOut,color:'red'}, 0.2);
			}else{
				tl.reverse();
			}		
	});

		$(window).load(function(){			
			$(window).trigger('resize');
		});
	
	
});
</script>

